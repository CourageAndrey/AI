<Window x:Class="Inventor.Client.UI.ConceptDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:ui="clr-namespace:Inventor.Client.UI"
		Title="Edit Concept" SizeToContent="WidthAndHeight" MinHeight="300" MinWidth="100" WindowStartupLocation="CenterOwner">
	<DockPanel LastChildFill="True">
		<StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="5">
			<Button Margin="5" Padding="5,2,5,2" Click="okClick">OK</Button>
			<Button Margin="5" Padding="5,2,5,2" Click="cancelClick">Cancel</Button>
		</StackPanel>
		<Grid Name="_contextControl">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<GroupBox Grid.Row="0" Header="Name">
				<ui:LocalizedStringVariableControl EditValue="{Binding Path=Name, Mode=OneTime}" x:Name="_nameConrol" />
			</GroupBox>
			<GroupBox Grid.Row="1" Header="Hint">
				<ui:LocalizedStringVariableControl EditValue="{Binding Path=Hint, Mode=OneTime}" x:Name="_hintConrol" />
			</GroupBox>
		</Grid>
	</DockPanel>
</Window>
