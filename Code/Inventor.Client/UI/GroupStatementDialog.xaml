<Window x:Class="Inventor.Client.UI.GroupStatementDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Group" SizeToContent="WidthAndHeight" MinWidth="100" WindowStartupLocation="CenterOwner">
	<DockPanel LastChildFill="True">
		<StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="5">
			<Button Margin="5" Padding="5,2,5,2" Click="okClick">OK</Button>
			<Button Margin="5" Padding="5,2,5,2" Click="cancelClick">Cancel</Button>
		</StackPanel>
		<StackPanel Orientation="Vertical" Name="_contextControl">
			<GroupBox Header="Area">
				<ComboBox Name="_comboBoxArea" SelectedItem="{Binding Path=Area, Mode=TwoWay}" />
			</GroupBox>
			<GroupBox Header="Concept">
				<ComboBox Name="_comboBoxConcept" SelectedItem="{Binding Path=Concept, Mode=TwoWay}" />
			</GroupBox>
		</StackPanel>
	</DockPanel>
</Window>
