<UserControl x:Class="Inventor.Client.Controls.ConceptControl"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:controls="clr-namespace:Inventor.Client.Controls">
	<Grid Name="_contextControl">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<GroupBox Grid.Row="0" Name="_groupName">
			<controls:LocalizedStringVariableControl EditValue="{Binding Path=Name, Mode=OneTime}" x:Name="_nameControl" />
		</GroupBox>
		<GroupBox Grid.Row="1" Name="_groupHint">
			<controls:LocalizedStringVariableControl EditValue="{Binding Path=Hint, Mode=OneTime}" x:Name="_hintControl" />
		</GroupBox>
	</Grid>
</UserControl>
