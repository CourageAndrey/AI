<UserControl x:Class="Inventor.Client.Controls.HasPartStatementControl"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<StackPanel Orientation="Vertical" Name="_contextControl">
		<GroupBox Name="_groupID">
			<TextBox Text="{Binding Path=ID, Mode=TwoWay}" x:Name="_idControl" />
		</GroupBox>
		<GroupBox Name="_groupWhole">
			<ComboBox Name="_comboBoxWhole" SelectedItem="{Binding Path=Whole, Mode=TwoWay}" />
		</GroupBox>
		<GroupBox Name="_groupPart">
			<ComboBox Name="_comboBoxPart" SelectedItem="{Binding Path=Part, Mode=TwoWay}" />
		</GroupBox>
	</StackPanel>
</UserControl>
