<UserControl x:Class="Inventor.Semantics.Extensions.WPF.Controls.ComparisonStatementControl"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<StackPanel Orientation="Vertical" Name="_contextControl">
		<GroupBox Name="_groupID">
			<TextBox Text="{Binding Path=ID, Mode=TwoWay}" x:Name="_idControl" />
		</GroupBox>
		<GroupBox Name="_groupLeftValue">
			<ComboBox Name="_comboBoxLeftValue" SelectedItem="{Binding Path=LeftValue, Mode=TwoWay}" />
		</GroupBox>
		<GroupBox Name="_groupRightValue">
			<ComboBox Name="_comboBoxRightValue" SelectedItem="{Binding Path=RightValue, Mode=TwoWay}" />
		</GroupBox>
		<GroupBox Name="_groupComparisonSign">
			<ComboBox Name="_comboBoxComparisonSign" SelectedItem="{Binding Path=ComparisonSign, Mode=TwoWay}" />
		</GroupBox>
	</StackPanel>
</UserControl>
