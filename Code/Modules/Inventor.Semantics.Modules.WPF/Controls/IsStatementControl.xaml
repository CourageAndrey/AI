<UserControl x:Class="Inventor.Semantics.Modules.WPF.Controls.IsStatementControl"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<StackPanel Orientation="Vertical" Name="_contextControl">
		<GroupBox Name="_groupID">
			<TextBox Text="{Binding Path=ID, Mode=TwoWay}" x:Name="_idControl" />
		</GroupBox>
		<GroupBox Name="_groupAncestor">
			<ComboBox Name="_comboBoxAncestor" SelectedItem="{Binding Path=Ancestor, Mode=TwoWay}" />
		</GroupBox>
		<GroupBox Name="_groupDescendant">
            <ComboBox Name="_comboBoxDescendant" SelectedItem="{Binding Path=Descendant, Mode=TwoWay}" />
		</GroupBox>
	</StackPanel>
</UserControl>
